<mvc:View
    controllerName="mids.controller.View1"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <App id="_IDGenApp1">
        <Page id="page" title="{i18n>title}">
            <customHeader>
                <Bar id="_IDGenBar1">
                    <contentLeft>
                       <Image id="_IDGenImage1" src="./SAP-Logo.svg" height="2rem"/>
                    </contentLeft>
                    <contentMiddle>
                      <Title id="_IDGenTitle1" class="customHeaderTitle" text="Generate MIDs" level="H1" titleStyle="H4"/>
                    </contentMiddle>
                </Bar>
            </customHeader>
            <content>
                <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                    <HBox id="_IDGenHBox1" justifyContent="SpaceBetween" alignItems="End">
                        <VBox id="_IDGenVBox2">
                            <Label id="_IDGenLabel1" text="Enter the Number of MIDs to be generated" labelFor="inputMIDs"/>
                            <Input id="inputMIDs" value="" width="auto" placeholder="e.g. 6"/>
                        </VBox>
                        <VBox id="_IDGenVBox3">
                            <Button id="_IDGenButton1" text="Go" press="onGeneratePress"/>
                            <Button id="_IDGenButton2" text="Export" press="onExportPress"/>
                        </VBox>
                    </HBox>
                    <Table id="midsTable" items="{path: '/mids'}" visible="{= ${/mids}.length > 0 }">
                        <columns>
                            <Column id="_IDGenColumn1">
                                <Text id="_IDGenText1" text="MIDs"/>
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="_IDGenColumnListItem1">
                                <cells>
                                    <ObjectIdentifier id="_IDGenObjectIdentifier1" title="{mids}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
            </content>
        </Page>
    </App>
</mvc:View>
